{
  "name": "ss-ui-automation",
  "version": "1.1.2",
  "description": "run ui automation using cypress and cucumber",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "test": "cypress run --env TAGS='@e2e-test' --spec 'cypress/e2e/**/*.feature' --browser chrome --config 'baseUrl=https://www.google.com'",
    "test:seamless": "npm run report:clean && npm run test:cypress || npm run posttest",
    "test:cypress": "NO_COLOR=1 cypress run -e TAGS=$tag,hostname=$apihost,host=$dbhost --browser chrome --headless --config-file cypress.config.js --config baseUrl=$baseUrl CYPRESS_lighthouse=$enable",
    "test:debug": "cypress run --headed --browser chrome --env TAGS='@e2e-test' --spec 'cypress/e2e/**/*.feature'",
    "report:clean": "rimraf ./cypress/PTReports/* && rimraf ./cypress/reports/* && mkdir ./cypress/reports/mocha && mkdir ./cypress/reports/mochareports && mkdir ./cypress/reports/cucumber-json",
    "pre:cleanup": "rimraf ./cypress/screenshots && rimraf ./cypress/videos",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest": "npm run combine-reports && npm run generate-report",
    "clean:cucumber": "rm -rf ./cypress/reports && mkdir ./cypress/reports",
    "node:cucumber": "node ./cypress/cucumber-html-reports.js",
    "cypress:parallel": "npm run report:clean && cypress-parallel -d 'cypress/e2e/**/*.feature' -t $threads -s test:cypress -m false",
    "test:cucumber": "npm run clean:cucumber && npm run cypress:parallel || node embedScreenshots.js && npm run node:cucumber || npm run node:cucumber",
    "build": "zip -r package.zip cypress/ cypress.config.js package.json Dockerfile docker-compose.yaml reportServer.pem reportServer.sh test.done README.md"
  },
  "author": "",
  "license": "Private",
  "dependencies": {
    "axios": "^0.21.0",
    "cypress-audit": "^0.3.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "cypress-file-upload": "^5.0.6",
    "cypress-xpath": "^1.6.2",
    "date-fns": "^2.29.3",
    "faker": "^5.5.3",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "lighthouse": "^8.6.0",
    "multiple-cucumber-html-reporter": "^3.0.1",
    "mysql": "^2.18.1",
    "xml2js": "^0.6.2",
    "yarn": "^1.22.11"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.31.0",
    "cypress": "^11.2.0",
    "cypress-cucumber-attach-screenshots-to-failed-steps": "^1.0.0",
    "cypress-multi-reporters": "^1.5.0",
    "cypress-parallel": "^0.14.0",
    "date-fns": "^2.29.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.5",
    "lighthouse": "^8.6.0",
    "lint-staged": "^10.5.3",
    "mocha": "^9.2.0",
    "mochawesome": "^7.0.1",
    "mochawesome-merge": "^4.2.1",
    "mochawesome-report-generator": "^6.0.1",
    "multiple-cucumber-html-reporter-ignore-skipped-pending-tests": "^1.0.2",
    "mysql": "^2.18.1",
    "xml2js": "^0.6.2"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "step_definitions": "./cypress/e2e",
    "cucumberJson": {
      "generate": true,
      "outputFolder": "./cypress/reports/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "git add"
    ]
  }
}
